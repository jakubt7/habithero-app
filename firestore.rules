rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // block writes to the root user doc

      match /habits/{habitId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId
                       && request.resource.data.keys().hasOnly([
                         'name','createdAt','targetPerDay','category','note','reminderTime','icon'
                       ])
                       && request.resource.data.name is string
                       && request.resource.data.name.size() > 0
                       && request.resource.data.name.size() <= 120
                       && (!('category' in request.resource.data) || request.resource.data.category is string)
                       && (!('note' in request.resource.data) || request.resource.data.note is string)
                       && (!('reminderTime' in request.resource.data) || request.resource.data.reminderTime is string)
                       && (!('icon' in request.resource.data) || request.resource.data.icon is string);
        allow update, delete: if request.auth != null && request.auth.uid == userId;
      }

      match /categories/{categoryId} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId
                       && request.resource.data.keys().hasOnly(['label','colorKey','createdAt'])
                       && request.resource.data.label is string
                       && request.resource.data.label.size() > 0
                       && request.resource.data.label.size() <= 60
                       && request.resource.data.colorKey in ['sky','emerald','amber','violet','rose','slate'];
        allow update: if request.auth != null && request.auth.uid == userId
                       && request.resource.data.keys().hasOnly(['label','colorKey'])
                       && request.resource.data.label is string
                       && request.resource.data.label.size() > 0
                       && request.resource.data.label.size() <= 60
                       && request.resource.data.colorKey in ['sky','emerald','amber','violet','rose','slate'];
        allow delete: if request.auth != null && request.auth.uid == userId;
      }

      match /checkins/{dateKey} {
        allow read: if request.auth != null && request.auth.uid == userId;
        allow create, update: if request.auth != null && request.auth.uid == userId
                              && request.resource.data.keys().hasOnly(['date','completed','ts'])
                              && request.resource.data.date == dateKey
                              && request.resource.data.completed is map;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
